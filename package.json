{
  "name": "react-hirc",
  "version": "1.0.6",
  "description": "React Hooks (Immer + Reducer + Context)",
  "repository": "git@github.com:miZyind/react-hirc.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/miZyind/react-hirc#readme",
  "bugs": {
    "url": "https://github.com/miZyind/react-hirc/issues"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"*/**/*.ts\" --max-warnings 0"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "react",
    "hooks",
    "immer",
    "reducer",
    "redux",
    "typescript"
  ],
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "immer": "^7.0.7",
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-mizyind": "^1.1.10",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/all",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "mizyind"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "variable",
          "format": [
            "camelCase",
            "UPPER_CASE",
            "PascalCase"
          ]
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all"
  }
}
